@model SocialLibraryMVC.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h1 style="padding-top: 15px;">Create A New Review</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text_review" class="control-label"></label>
                <input asp-for="Text_review" class="form-control" />
                <span asp-validation-for="Text_review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" /> |
                    <a asp-action="Index" class="btn btn-default">Back to List</a>
            </div>
            <input type="hidden" asp-for="Isbn_13" value="@ViewData["ISBN_13"]" />
            <input type="hidden" asp-for="User_id" value="@ViewData["User_id"]" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
