@model SocialLibraryMVC.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<h1 style="padding-top: 15px;">Edit</h1>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Text_review" class="control-label"></label>
                <textarea asp-for="Text_review" class="form-control" >
                </textarea>
                <span asp-validation-for="Text_review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="Isbn_13" value="@ViewData["ISBN_13"]" />
            <input type="hidden" asp-for="User_id" value="@ViewData["User_id"]" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
