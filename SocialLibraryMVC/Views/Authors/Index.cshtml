@model IEnumerable<SocialLibraryMVC.Models.Author>

@{
    ViewData["Title"] = "Index";
}

<div>
    <h1 style="padding-top: 15px;">Authors </h1>
    <a asp-action="Create" class="btn btn-primary">Create New Author</a>  
</div>
 


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Biography)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="margin-bottom: 2px; padding-left: 25px; padding-right: 25px;" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" style="margin-bottom: 2px" class="btn btn-primary">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" style="margin-bottom: 2px; padding-right: 18px; padding-left: 18px" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
