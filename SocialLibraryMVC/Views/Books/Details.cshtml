    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Books</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Authors)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Authors.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN_10)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ISBN_10)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cover)
        </dt>
        <dd class = "col-sm-10">
            @if (ViewBag.Cover != null)
            {
                <img id="cover" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(ViewBag.Cover))">
            }
            else
            {
                <img id="cover" style="width:350px;height:350px; object-fit:cover" src="">
            }
        </dd>
    </dl>
</div>
    <a asp-action="Edit" asp-route-id="@Model?.ISBN_13">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <br />
    <br />
<script>
    function loadDoc() { 
        const xhttp = new XMLHttpRequest();
        xhttp.open("GET", "/Reviews/_BookReviews?isbn_13=" + @Model.ISBN_13, true);
        xhttp.send();
        xhttp.onload = function() {
                document.getElementById("reviewsDisplay").innerHTML = this.responseText; 
        }
 }

loadDoc();
</script>
<div>
    <h2>Reviews</h2>
    <div id="reviewsDisplay">
    </div>
</div>
